(
    top
    {
        type patch;
        faces
        (
            (3 7 6 2)
        );
    }
    bottom
    {
        type wall;
        faces
        (
            (0 1 5 4)
        );
    }
    walls
    {
        type wall;
        faces
        (
            (0 4 7 3)   // Left (x=0)
            (1 2 6 5)   // Right (x=0.01)
            (0 3 2 1)   // Back (z=0)
            (4 5 6 7)   // Front (z=0.02)
        );
    }
);

mergePatchPairs
