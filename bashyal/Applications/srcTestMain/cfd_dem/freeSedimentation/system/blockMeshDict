convertToMeters 1;

// Slope 1:10 (V:H) -> angle = atan(0.1)
// Length = 1.0 m (horizontal projection)
// Height = 0.1 m
// Width = 0.1 m

// Vertices
vertices
(
    (0 0 0)             // 0
    (0.02 0 0)          // 1
    (0.02 1.0 0)        // 2
    (0 1.0 0)           // 3
    (0 0 0.02)          // 4
    (0.02 0 0.02)       // 5
    (0.02 1.0 0.02)     // 6
    (0 1.0 0.02)        // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (20 1000 20) simpleGrading (1 1 1)
);

